generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL_PRISMA")
}

model User {
  id    Int     @id @default(autoincrement())
  role String  @unique
  username  String
}

model Project {
  id             Int      @id @default(autoincrement())
  projectTitle   String
  description    String
  githubLink     String?
  liveDemoLink   String?
  imgUrl         String?
  createdAt      DateTime @default(now())
  status         String?
  isPublic       Boolean  @default(false)
  userId         Int
  @@index([userId])   
}